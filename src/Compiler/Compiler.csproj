<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsShipped>true</IsShipped>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <IncludeSymbols>false</IncludeSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>WebForms.Compiler</PackageId>
    <DevelopmentDependency>true</DevelopmentDependency>
    <NoPackageAnalysis>true</NoPackageAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <None Update="Build\*" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="../../tools/aspnet_compiler/aspnet_compiler.csproj"
      ReferenceOutputAssembly="false"
      Targets="Publish;PublishItemsOutputGroup"
      Private="false"
      SetTargetFramework="TargetFramework=net6.0"
      OutputItemType="AspNetCompilerOutputs6" />
    <ProjectReference
      Include="../../tools/aspnet_compiler/aspnet_compiler.csproj"
      ReferenceOutputAssembly="false"
      Targets="Publish;PublishItemsOutputGroup"
      Private="false"
      SetTargetFramework="TargetFramework=net8.0"
      OutputItemType="AspNetCompilerOutputs8" />
    <ProjectReference
      Include="../Compiler.Generator/Compiler.Generator.csproj"
      ReferenceOutputAssembly="false"
      Targets="Publish;PublishItemsOutputGroup"
      Private="false"
      OutputItemType="CompilerGeneratorOutputs" />
  </ItemGroup>

  <Target Name="GetWebFormsCompiler" BeforeTargets="AssignTargetPaths" AfterTargets="ResolveProjectReferences">
    <PropertyGroup>
      <_AspNetCompilerPrefix6>tools/aspnet_compiler/net6.0/</_AspNetCompilerPrefix6>
      <_AspNetCompilerPrefix8>tools/aspnet_compiler/net8.0/</_AspNetCompilerPrefix8>
    </PropertyGroup>
    <ItemGroup>
      <None
        Include="%(AspNetCompilerOutputs6.Identity)"
        Link="$(_AspNetCompilerPrefix6)%(AspNetCompilerOutputs6.RelativePath)"
        PackagePath="$(_AspNetCompilerPrefix6)%(AspNetCompilerOutputs6.RelativePath)"
        Pack="true" />
      <None
        Include="%(AspNetCompilerOutputs8.Identity)"
        Link="$(_AspNetCompilerPrefix8)%(AspNetCompilerOutputs8.RelativePath)"
        PackagePath="$(_AspNetCompilerPrefix8)%(AspNetCompilerOutputs8.RelativePath)"
        Pack="true" />
    </ItemGroup>
  </Target>

  <Target Name="GetCompilerGenerator" BeforeTargets="AssignTargetPaths" AfterTargets="ResolveProjectReferences">
    <PropertyGroup>
      <_AnalyzerPrefix>analyzers/dotnet/cs/roslyn4.8</_AnalyzerPrefix>
    </PropertyGroup>
    <ItemGroup>
      <None
        Include="%(CompilerGeneratorOutputs.Identity)"
        Link="$(_AnalyzerPrefix)%(CompilerGeneratorOutputs.RelativePath)"
        PackagePath="$(_AnalyzerPrefix)%(CompilerGeneratorOutputs.RelativePath)"
        Pack="true" />
    </ItemGroup>
  </Target>

</Project>
