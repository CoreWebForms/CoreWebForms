<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsShipped>true</IsShipped>
    <TargetFramework>net6.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <IncludeSymbols>false</IncludeSymbols>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>WebForms.Compiler</PackageId>
    <DevelopmentDependency>true</DevelopmentDependency>
    <NoPackageAnalysis>true</NoPackageAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <None Update="Build\*" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="../../tools/aspnet_compiler/aspnet_compiler.csproj"
      ReferenceOutputAssembly="false"
      Targets="Publish;PublishItemsOutputGroup"
      Private="false"
      OutputItemType="AspNetCompilerOutputs" />
    <ProjectReference
      Include="../Compiler.Generator/Compiler.Generator.csproj"
      ReferenceOutputAssembly="false"
      Targets="Publish;PublishItemsOutputGroup"
      Private="false"
      OutputItemType="CompilerGeneratorOutputs" />
  </ItemGroup>

  <Target Name="GetWebFormsCompiler" BeforeTargets="AssignTargetPaths" AfterTargets="ResolveProjectReferences">
    <PropertyGroup>
      <_AspNetCompilerPrefix>tools/aspnet_compiler/</_AspNetCompilerPrefix>
    </PropertyGroup>
    <ItemGroup>
      <None
        Include="%(AspNetCompilerOutputs.Identity)"
        Link="$(_AspNetCompilerPrefix)%(AspNetCompilerOutputs.RelativePath)"
        PackagePath="$(_AspNetCompilerPrefix)%(AspNetCompilerOutputs.RelativePath)"
        Pack="true" />
    </ItemGroup>
  </Target>

  <Target Name="GetCompilerGenerator" BeforeTargets="AssignTargetPaths" AfterTargets="ResolveProjectReferences">
    <PropertyGroup>
      <_AnalyzerPrefix>analyzers/dotnet/cs/roslyn4.1</_AnalyzerPrefix>
    </PropertyGroup>
    <ItemGroup>
      <None
        Include="%(CompilerGeneratorOutputs.Identity)"
        Link="$(_AnalyzerPrefix)%(CompilerGeneratorOutputs.RelativePath)"
        PackagePath="$(_AnalyzerPrefix)%(CompilerGeneratorOutputs.RelativePath)"
        Pack="true" />
    </ItemGroup>
  </Target>

</Project>
